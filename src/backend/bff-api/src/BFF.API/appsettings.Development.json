{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.HttpLogging.HttpLoggingMiddleware": "Information"
    }
  },
  "JwtSettings": {
    "SecretKey": "development-secret-key-for-jwt-tokens-super-secure-32-chars",
    "Issuer": "AuthAPI",
    "Audience": "EducationalPlatform",
    "ExpiryMinutes": 120
  },
  "ApiSettings": {
    "AuthApiUrl": "http://localhost:5001",
    "ConteudoApiUrl": "http://localhost:5002",
    "AlunosApiUrl": "http://localhost:5003",
    "PagamentosApiUrl": "http://localhost:5004"
  },
  "RedisSettings": {
    "ConnectionString": "localhost:6379",
    "Database": 1,
    "KeyPrefix": "bff:dev:",
    "DefaultExpiration": "00:15:00"
  },
  "ResilienceSettings": {
    "RetryCount": 2,
    "CircuitBreakerThreshold": 2,
    "CircuitBreakerDuration": "00:00:15",
    "TimeoutDuration": "00:00:15"
  },
  "CacheSettings": {
    "DashboardExpiration": "00:05:00",
    "UserProfileExpiration": "00:30:00",
    "CursoDetailsExpiration": "00:10:00",
    "RelatoriosExpiration": "00:02:00"
  },
  "CORS": {
    "AllowedOrigins": ["http://localhost:4200", "http://localhost:3000"],
    "AllowedMethods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
    "AllowedHeaders": ["Content-Type", "Authorization"]
  },
  "Urls": "http://localhost:5005"
}
